{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "AdminLoginPassword": {
      "type": "securestring"
    },
    "SalesDacPacPath": {
      "type": "string"
    },
    "StreamingDacPacPath": {
      "type": "string"
    },
    "DacPacContainerSAS": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "ohmdw"
    }
  },
  "variables": {
    "ohmdw-sqlserver-Name": "[concat(parameters('namePrefix'), '-sqlserver-', uniqueString(resourceGroup().id))]"},
  "resources": [
    {
      "name": "[variables('ohmdw-sqlserver-Name')]",
      "type": "Microsoft.Sql/servers",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "[concat(parameters('namePrefix'), '-sqlserver')]"
      },
      "properties": {
        "administratorLogin": "[parameters('AdminLogin')]",
        "administratorLoginPassword": "[parameters('AdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "apiVersion": "2014-04-01-preview",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('ohmdw-sqlserver-Name'))]"
          ],
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "CloudSales",
          "type": "databases",
          "location": "[parameters('location')]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('ohmdw-sqlserver-Name'))]"
          ],
          "tags": {
            "displayName": "CloudSales"
          },
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "edition": "Standard",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S2"
          },
          "resources": [
            {
              "name": "Import",
              "type": "extensions",
              "apiVersion": "2014-04-01-preview",
              "dependsOn": [
                "[concat('Microsoft.Sql/servers/', variables('ohmdw-sqlserver-Name'), '/databases/CloudSales')]"
              ],
              "properties": {
                "storageKeyType": "SharedAccessKey",
                "storageKey": "[parameters('DacPacContainerSAS')]",
                "storageUri": "[parameters('SalesDacPacPath')]",
                "administratorLogin": "[parameters('AdminLogin')]",
                "administratorLoginPassword": "[parameters('AdminLoginPassword')]",
                "operationMode": "Import",
                "authenticationType": "SQL"
              }
            }
          ]
        },
        {
          "name": "CloudStreaming",
          "type": "databases",
          "location": "[parameters('location')]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('ohmdw-sqlserver-Name'))]"
          ],
          "tags": {
            "displayName": "CloudStreaming"
          },
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "edition": "Standard",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S2"
          },
          "resources": [
            {
              "name": "Import",
              "type": "extensions",
              "apiVersion": "2014-04-01-preview",
              "dependsOn": [
                "[concat('Microsoft.Sql/servers/', variables('ohmdw-sqlserver-Name'), '/databases/CloudStreaming')]"
              ],
              "properties": {
                "storageKeyType": "SharedAccessKey",
                "storageKey": "[parameters('DacPacContainerSAS')]",
                "storageUri": "[parameters('StreamingDacPacPath')]",
                "administratorLogin": "[parameters('AdminLogin')]",
                "administratorLoginPassword": "[parameters('AdminLoginPassword')]",
                "operationMode": "Import",
                "authenticationType": "SQL"
              }
            }
          ]
        }
      ]
    }],
  "outputs": {}
}
